        private void onEventFrequencyStatusChanged (string signal, STATUS status)
        {
            DelegateStringFunc func = null;

            switch (status) {
                case STATUS.ERROR:
                    func = errorReport;
                    break;
                case STATUS.WARNING:
                    func = warningReport;
                    break;
                case STATUS.NORMAL:
                    func = actionReport;
                    break;
                case STATUS.NAN:
                    //TODO:
                    break;
            }

            func?.Invoke ($"Для сигнала <{signal}> новый статус: <{status}>...");
        }

